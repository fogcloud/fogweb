<div class="row">
  <h1>Download a tarball of blocks</h1>
</div>

<div class="row">
  <p>Enter block hashes, one per line.</p>

  <%= form_tag({action: "download"}) do %>
    <p><%= label_tag :blocks do %>
         Blocks <br>
         <%= text_area_tag :blocks %>
       <% end %>  
    </p>
    <p><%= submit_tag "Download Tarball" %></p>
  <% end %>
</div>
