<div class="page-header">
  <%= link_to blocks_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_block_path(@block), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show block</h1>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @block.user_id %></dd>

  <dt>Hash:</dt>
  <dd><%= @block.hash %></dd>

</dl>
