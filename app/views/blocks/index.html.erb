<div class="page-header">
  <%= link_to new_block_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Block
  <% end %>
  <h1>Your Blocks</h1>
</div>

<div class="row">
  <p>This page allows you to delete blocks. That's basically never a good idea.</p>
</div>

<div class="row">
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Date</th>
          <th>Hash</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
      <%= content_tag_for(:tr, @blocks) do |block| %>
        <td><span class="local-date"><%= block.created_at %></span></td>
        <td><%= link_to block.name, block.path %></td>
        <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
